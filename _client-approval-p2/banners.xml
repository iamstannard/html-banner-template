<?xml version="1.0" encoding="UTF-8"?>

    <banners>

        <!--CAMPAIGN DETAILS-->

        <campaign>

            <client>CLIENT</client>
            <project>Campaign Title</project>
            <!--<date>Month YYYY</date>-->
            <!--date is auto-generated in javascript-->

        </campaign>

        <!--BANNERS-->

        <!-- follow this folder structure-->

        <!--
        [banners]
        ..[phaseName1]
        ....[WxH]
        ....[WxH]
        ....[WxH]
        ....WxH.jpg
        ..[phaseName2]
        ....[WxH]
        ....[WxH]
        ....[WxH]
        ....WxH.jpg
        etc
        -->

        <phase category="phys-ical">
            <!--phase category can be whatever you want it to be, but subfolder has to have the same name-->
            <!--hyphens in category name/subfolder will be displayed as spaces-->

            <banner>
                <type>html</type>
                <!--type : html or gif or jpg or png-->
                <!--if html, will navigate to index file-->
                <!--if image type, will append filename with image type-->
                <width>300</width>
                <height>250</height>
                <altLabel></altLabel>
                <altFileName></altFileName>
                <!--if altLabel or altFileName are left empty, will use WxH-->
            </banner>

            <!--
